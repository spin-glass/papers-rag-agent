# OpenAI API Key (required for RAG functionality)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (optional, for tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=papers-rag-agent
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# RAG Configuration
TOP_K=5
SUPPORT_THRESHOLD=0.35
MAX_OUTPUT_CHARS=1400
GRAPH_RECURSION_LIMIT=10

# API Configuration
PAPERS_API_BASE=http://localhost:9000

# LLM Provider
LLM_PROVIDER=openai

# MCP arXiv Content Settings (optional)
ARXIV_MCP_ENABLE=false
ARXIV_MCP_CMD=uv
ARXIV_MCP_ARGS=tool run arxiv-mcp-server
ARXIV_STORAGE_PATH=~/.arxiv-mcp-server/papers
ARXIV_MCP_TIMEOUT_S=60
ARXIV_PREFETCH_TOPK=10
ARXIV_CACHE_TTL_DAYS=7

# Development settings
USE_LANGGRAPH=true
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=papers-rag-agent
